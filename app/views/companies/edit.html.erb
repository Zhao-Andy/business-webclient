<h1>Edit your company info here</h1>

<%= form_tag("/companies/#{@company['id']}", method: :patch) do %>
<div>
  <%= label_tag(:name) %>
  <%= text_field_tag(:name) %>
</div>
<div>
  <%= label_tag(:department) %>
  <%= text_field_tag(:department) %>
</div>
<div>
  <%= label_tag(:buzzword) %>
  <%= text_field_tag(:buzzword) %>
</div>
<div>
  <%= label_tag(:slogan) %>
  <%= text_field_tag(:slogan) %>
</div>
<%= submit_tag("Edit") %>
<% end %>
